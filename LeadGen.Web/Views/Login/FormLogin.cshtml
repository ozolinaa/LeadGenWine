@model LeadGen.Code.Login

<h2>Login</h2>
<hr />

@using (Html.BeginForm("Index", "Login", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.ID)

        <div class="form-group">
            @Html.LabelFor(x => x.email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.email, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(x => x.emailConfirmationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
}