@model LeadGen.Code.Login

<h4>Login</h4>
<hr />

@using (Html.BeginForm("Index", "Login", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-xs-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.ID)


            <div class="form-group">
                @Html.LabelFor(x => x.email, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(x => x.email, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(x => x.emailConfirmationDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.password, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(x => x.password, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" value="Login" class="btn btn-black" style="margin-bottom: 20px;" />
        </div>
    </div>
}