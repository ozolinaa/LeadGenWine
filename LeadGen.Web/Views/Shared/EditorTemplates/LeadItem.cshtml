@model LeadGen.Code.Lead.LeadItem

@Html.HiddenFor(x => x.ID)

@Html.EditorFor(x => x.fieldGroups, new { leadItem = Model })

@Html.ValidationSummary()


@{
    bool? nofificationStatus = ViewBag.NofificationStatus as bool?;
    if (nofificationStatus == true)
    {
        <script>LeadGen.ui.showNotificationLabel();</script>
    }
    else if (nofificationStatus == false)
    {
        <script>
            var errorText = $(".validation-summary-errors").html();
            LeadGen.ui.showNotificationLabel(errorText, 'danger');
        </script>
    }
}