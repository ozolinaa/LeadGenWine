@model List<LeadGen.Code.CMS.PostType>
@using LeadGen.Code.CMS;
@{
    ViewBag.Title = "Index";
}

<div id="PopUp"></div>


<div class="row" style="margin:20px 0 20px 0;">
    <div class="col-sm-4" >
        <h2 style="margin:0;">Post Types</h2>
    </div>
    <div class="col-sm-8">
        @Html.ActionLink("Add Post Type", "ShowPostTypeEditForm", null, null,
         new
         {
             @class = "btn btn-primary",
             data_ajax = "true",
             data_ajax_method = "GET",
             data_ajax_mode = "replace",
             data_ajax_update = "#PopUp"
         })
    </div>
</div>

@foreach (PostType type in Model.Where(x => x.forTaxonomyID == null))
{
    <div class="row" style="margin:20px 0 20px 0;">
        <div class="col-sm-4">
            <h3 style="display:inline-block; margin:0;">@Html.ActionLink(type.name, "PostList", new { typeID = type.ID })</h3>
        </div>
        <div class="col-sm-8">
            @Html.ActionLink("Edit Post Type", "ShowPostTypeEditForm", null, new { postTypeID = type.ID }, new
    {
        @class = "btn btn-warning btn-sm",
        data_ajax = "true",
        data_ajax_loading = "#LoadingWindowSplash",
        data_ajax_update = "#PopUp",
        data_ajax_method = "GET",
        data_ajax_mode = "replace"
    })
            @Html.ActionLink("Link Post Taxonomies", "ShowPostTypeTaxonomyEditor", null, new { postTypeID = type.ID }, new
    {
        @class = "btn btn-warning btn-sm",
        data_ajax = "true",
        data_ajax_loading = "#LoadingWindowSplash",
        data_ajax_update = "#PopUp",
        data_ajax_method = "GET",
        data_ajax_mode = "replace"
    })
            @Html.ActionLink("Link Attachment Taxonomies", "ShowPostTypeAttachmentTaxonomyEditor", null, new { postTypeID = type.ID }, new
    {
        @class = "btn btn-warning btn-sm",
        data_ajax = "true",
        data_ajax_loading = "#LoadingWindowSplash",
        data_ajax_update = "#PopUp",
        data_ajax_method = "GET",
        data_ajax_mode = "replace"
    })
        </div>
    </div>
}

