
@{
    ViewBag.Title = "Cache";
}

<h2>Cache</h2>

@using (Html.BeginForm("clearCacheUrl", null, null, FormMethod.Post, true,
new
{
   @class = "form-horizontal",
   data_ajax = "true",
   data_ajax_loading = "#LoadingWindowSplash",
   data_ajax_success = "LeadGen.ui.showNotificationLabel",
   data_ajax_complete = "LeadGen.PostEdit.init"
}))
{
    <div class="form-group">
        @Html.Label("URL to update cache", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("url", ViewBag.url as string, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Clear URL" class="btn btn-primary" />
        </div>
    </div>
}


@Html.ActionLink("Clear All Cache", "clearCacheAll", null, null,
     new
     {
         @class = "btn btn-danger",
         data_ajax = "true",
         data_ajax_method = "POST",
         data_ajax_loading = "#LoadingWindowSplash",
         data_ajax_success = "LeadGen.ui.showNotificationLabel",
         data_ajax_mode = "replace",
         data_ajax_update = "#PopUp"
     })