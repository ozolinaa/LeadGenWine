@model List<LeadGen.Code.CMS.PostType>
@using LeadGen.Code.CMS;
@{
    ViewBag.Title = "Index";
}

<div id="PopUp"></div>


<div class="row" style="margin:20px 0 20px 0;">
    <div class="col-sm-4" >
        <h2 style="margin:0;">Post Types</h2>
    </div>
    <div class="col-sm-8">
        @Ajax.ActionLink("Add Post Type", "ShowPostTypeEditForm", null, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "PopUp", HttpMethod = "GET" }, new { @class = "btn btn-primary " })
    </div>
</div>

@foreach (PostType type in Model.Where(x => x.forTaxonomyID == null))
{
    <div class="row" style="margin:20px 0 20px 0;">
        <div class="col-sm-4">
            <h3 style="display:inline-block; margin:0;">@Html.ActionLink(type.name, "PostList", new { typeID = type.ID })</h3>
        </div>
        <div class="col-sm-8">
            @Ajax.ActionLink("Edit Post Type", "ShowPostTypeEditForm", new { postTypeID = type.ID }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, LoadingElementId = "LoadingWindowSplash", UpdateTargetId = "PopUp", HttpMethod = "GET" }, new { @class = "btn btn-warning btn-sm" })
            @Ajax.ActionLink("Link Post Taxonomies", "ShowPostTypeTaxonomyEditor", new { postTypeID = type.ID }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, LoadingElementId = "LoadingWindowSplash", UpdateTargetId = "PopUp", HttpMethod = "GET" }, new { @class = "btn btn-warning btn-sm" })
            @Ajax.ActionLink("Link Attachment Taxonomies", "ShowPostTypeAttachmentTaxonomyEditor", new { postTypeID = type.ID }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, LoadingElementId = "LoadingWindowSplash", UpdateTargetId = "PopUp", HttpMethod = "GET" }, new { @class = "btn btn-warning btn-sm" })
        </div>
    </div>
}

