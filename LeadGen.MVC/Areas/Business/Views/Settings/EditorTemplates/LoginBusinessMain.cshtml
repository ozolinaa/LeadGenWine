@model LeadGen.Code.Login

@{string formID = "LoginBusinessMainUpdateForm";}
@using (Ajax.BeginForm("LoginBusinessMainUpdate", null, null, new AjaxOptions { UpdateTargetId = formID, InsertionMode = InsertionMode.ReplaceWith }, new { @class = "form-horizontal", id = formID }))
{
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(x => x.email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(x => x.business.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.business.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.business.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.business.webSite, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.business.webSite, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.business.webSite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.business.address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.business.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.business.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
        </div>

    if (ViewBag.status == true)
    {
        <script>LeadGen.ui.showNotificationLabel();</script>
    }
}


