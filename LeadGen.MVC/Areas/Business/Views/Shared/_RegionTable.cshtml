@model LeadGen.Code.Business.Region
<div>
    @Html.HiddenFor(x => x.cityTerm.ID)
    @Html.HiddenFor(x => x.cityTerm.name)
    @Html.Label(Model.cityTerm.name)

    @for (int i = 0; i < Model.businessTypes.Count; i++)
    {
        @Html.CheckBoxFor(x => Model.businessTypes[i].isChecked, new { data_toggle = "tooltip", data_placement = "bottom", title = Model.businessTypes[i].name })
        @Html.HiddenFor(x => x.businessTypes[i].ID)
        @Html.HiddenFor(x => x.businessTypes[i].name)
    }
</div>