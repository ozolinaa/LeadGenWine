@model LeadGen.Code.Login
@{string formID = "SendPasswordRestoreEmailForm";}
@using (Ajax.BeginForm("SendPasswordRestoreEmail", null, null, new AjaxOptions { UpdateTargetId = formID, InsertionMode = InsertionMode.ReplaceWith }, new { @class = "form-horizontal", id = formID }))
{
    @Html.AntiForgeryToken()

    <h2>Reset Password</h2>
        <hr />
        <div class="form-group">
            @Html.LabelFor(x => x.email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.email, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send email for password reset" class="btn btn-primary" />
            </div>
        </div>
    if (ViewBag.status == true)
    {
        <script>
            bootbox.alert({
                title: "Email sent",
                message: "To reset the password, click the link sent to @Model.email"
            });
        </script>
    }
}