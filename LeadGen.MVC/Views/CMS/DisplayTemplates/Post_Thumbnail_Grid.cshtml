@model LeadGen.Code.CMS.Post
@using LeadGen.Code.CMS
@using LeadGen.Code.Taxonomy
<div class="item col-xs-6 col-sm-4 @*col-md-3*@">
    <h3>@Html.ActionLink(Model.title, "Index", new { urlPath = String.Format("{0}/", Model.Url) })</h3>
    @{
        if (Model.thumbnailAttachmentID != null)
        {
            <a href='@Url.Action("Index", "CMS", new { area = "", urlPath = String.Format("{0}/", Model.Url) })'>
                <img src="@Model.thumbnailUrl" class="img-responsive img-thumbnail" />
            </a>
        }
        else
        {
            <a href='@Url.Action("Index", "CMS", new { area = "", urlPath = String.Format("{0}/", Model.Url) })'>
                <img src="~/Content/themes/izgpam/empty_thumbnail.png"  class="img-responsive img-thumbnail" />
            </a>
        }
    }
    <div class="meta">
        @Html.DisplayFor(x => x.taxonomies, new { termsOnly = true})
    </div>
</div>

